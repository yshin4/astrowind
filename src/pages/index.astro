---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Jen Shin - Portfolio',
};
---

<Layout metadata={metadata}>
  <!-- <Fragment slot="announcement"></Fragment> -->
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#hero' },
        { text: 'About', href: '#about' },
        { text: 'Career', href: '#resume' },
        { text: 'Experience', href: '#porfolio' },
        { text: 'Skills', href: '#skills' },
        { text: 'Projects', href: '#projects' },
        { text: 'Contact', href: '#contact' },
      ]}
      actions={[
        {
          text: 'Hire Me',
          href: '#contact',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero
    id="hero"
    title="Jen Shin"
    tagline="⭐✨⭐✨⭐"
    actions={[{ variant: 'primary', text: 'Let\'s go! 🏃🏻‍♀️💨💨', href: '#about' }]}

  >
    <Fragment slot="subtitle">
      Welcome to my online portfolio. Let's make your time here worth it!  <br /> 
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://www.linkedin.com/in/jen-shin/',
        },
      },
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'Github',
          href: 'https://github.com/yshin4',
        },
      },
    ]}
    image={{
      src: '~/assets/images/me_char.png',
      alt: 'Image of myself as a character',
      loading: 'eager',
      width:"520",
      height:"600",
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h2>
      <p>
        I'm a fullstack Software Engineer at Google in the YouTube ShopAds team.
        With 6 years of work experience and a Computer Science degree, I thrive in a fast paced environment. 
        I'm comfortable with large scale platforms and high user impact projects. I'm experienced with both frontend and backend work.
        I enjoy driving the project from start to launch which includes the process of scoping, designing, implementing, testing, debugging, analyzing data, and finally launching the project.
      </p>
      <br />
      <p>
        On my free time I enjoy playing poker, video games, and reading. I also like to draw, spend numerous hours on Adobe After Effects and Photoshop, and explore new cafes and restaurants. 
        I'm a huge gamer!
      </p>
      <br />
      <p>If you'd like to learn more about me, you can follow me on:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    id="resume"
    title="Work experience"
    items={[
      {
        title:
          'Software Engineer <br /> <span class="font-normal">Google, Los Angeles, CA</span> <br /> <span class="text-sm font-normal">Sep 2018 - Present</span>',
        description: 
        `Designed, implemented, analyzed, and successfully launched Shopping Ad features on Shorts driving $2.1B revenue opportunity and $228M 7 day ARR (+120% YoY).
        Executed video and image ads for Shorts for both Android and iOS as a fullstack developer from design to launch.
        Specialized and owned Shoppable Ads for Shorts and managed and reviewed design and code.
        Mentored a new engineer in the team and guided them through multiple Shorts projects.
        Analyzed experiment and launch metrics, regularly interacting with the database, SQL queries, and logs.`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'Computer Science Technical Assistant <br /> <span class="text-base font-normal">LMU, Los Angeles, CA</span> <br /> <span class="text-sm font-normal">Jan 2018 - May 2018</span>',
        description: 
        `Assisted Computer Science majors and minors with wide variety of coding questions regarding their projects and assignments in the Computer Science lab.`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'Lab Manager <br /> <span class="text-base font-normal">LMU, Los Angeles, CA</span> <br /> <span class="text-sm font-normal">Jan 2016 - Dec 2017</span>',
        description: 
        `Attentively assisted clients, including both alumni and students, by resolving any complaints or trouble they had regarding the computer lab and various software they were using.`,
        icon: 'tabler:briefcase',
      },
      {
        title:
          'Website Programmer <br /> <span class="text-base font-normal">LMU, Los Angeles, CA</span> <br /> <span class="text-sm font-normal">Oct 2015 - Dec 2016</span>',
        description: 
        `Managed a college class website by uploading information using HTML and CSS and improved code through cleaning up general bugs, errors, and format.`,
        icon: 'tabler:briefcase',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    id="resume"
    title="Education"
    items={[
      {
        title: `Bachelor of Science in Computer Science <br /> <span class="font-normal"> Loyola Marymount University</span> <br /> <span class="text-sm font-normal">2015 - 2018</span>`,
        icon: 'tabler:school',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  
  <!-- Content Widget **************** -->

  <Content
    id="porfolio"
    title="Professional Experience"
    subtitle="This section highlights key products from my profession, demonstrating the skills and expertise I applied in delivering impactful results within my previous roles."
    isReversed
    items={[
      {
        title: 'Project Contributions',
        description:
          'Designed, implemented, analyzed, and successfully launched Shopping Ad features on Shorts driving $2.1B revenue opportunity and $228M 7 day ARR (+120% YoY).'
          + '</br></br> Executed video and image ads for Shorts for both Android and iOS as a fullstack developer from design to launch.'
          + '</br></br> Analyzed experiment and launch metrics, regularly interacting with the database, SQL queries, and logs.'
          + '</br></br> Managed up to four projects in parallel, prioritizing projects to deliver target SLOs and achieve key milestones.'
      },
      {
        title: 'Role in the team',
        description:
        'Mentored a new engineer in the team and guided them through multiple Shorts projects.'
          + '</br></br> Specialized and owned Shoppable Ads for Shorts and managed and reviewed design and code.'
          + '</br></br> Managed up to four projects in parallel, prioritizing projects to deliver target SLOs and achieve key milestones.'
      },
    ]}

    image={{
      src: '~/assets/images/shorts_purple_500.png',
      alt: 'YouTube Shorts logo',
      width:"535",
      height:"535",
    }}
    

  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        YouTube Primary Software Engineer <br /><span class="text-2xl">Shopping Ads on Shorts</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Google Chat & Hangout',
        description:
          'Collaborated with the Google Drive team to develop Files API to provide an organized files tab in Google Chat room. '
          + '</br></br> Enhanced the Files tab with additional functionality to dedupe, exclude, and filter files.'
          + '</br></br> Leveraged flume pipeline to eliminate deadnaming from Google Chat and Google Hangouts.'
          + '</br></br> Conducted code reviews and provided feedback for entry level engineers',
      },
      {
        title: 'Google Cloud:',
        description: `Migrated legacy feature to a new pipeline in Google Cloud ML team with C++.`,
      },
      {
        title: 'Google GSuite Security Center:',
        description:
          'Implemented alert filtering for GSuite Security Center utilizing knowledge in database, paging, and frontend tools like Javascript, JQuery, and Wiz. ',
      },
    ]}
    image={{
      src: '~/assets/images/google2.png',
      alt: 'Google logo',
      width:"500",
      height:"500",
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Google Software Engineer <br /><span class="text-2xl">My Previous Teams: </br> Chat, Cloud, GSuite Security Center</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

   <!-- Features3 Widget ************** -->

   <Features3
   id="skills"
   title="Skills"
   subtitle=""
   columns={3}
   defaultIcon="tabler:point-filled"
   items={[
     {
       title: 'Programming Languages',
       description: 'Proficient in C++, Java, Python, Javascript, JQuery, SQL, Bigtable, Elements, Wiz, Astro and more.',
     },
     {
       title: 'Large Scale Development',
       description: 'Skilled at developing high impact products and comfortable with large scale development.',
     },
     {
       title: 'Analyzing Metrics',
       description: 'Experienced in creating user-friendly interfaces and optimizing user experiences based on data.',
     },
     {
       title: 'Adobe Creative Suite',
       description: 'Skilled in using After Effects and Photoshop to create and edit visual elements.',
     },
     {
       title: 'Languages',
       description: 'Fluent in Korean and English, Intermediate in Japanese, Beginner in Spanish and ASL.',
     },
     {
       title: 'Flexible and Fast Learner',
       description: 'Extremly interested in learning new things and new tools, thrive in fast paced environment.',
     },
   ]}
 />

  
  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="projects"
    title="Personal Projects"
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

 
  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="contact"
    title="Let's talk more!"
    subtitle="Connect with me on LinkedIn or please feel free to shoot me an email: <b>yeonsooshin0505@gmail.com</b>"
    actions={[
      {
        variant: 'primary',
        text: 'My LinkedIn',
        href: 'https://www.linkedin.com/in/jen-shin/',
      },
    ]}

    
  />

</Layout>
